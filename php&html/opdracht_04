	<meta charset="UTF-8">
	<title>opdracht 4</title>
</head>
<body>
	<?php while($x < 20): ?>
	<p>
		<?php $y = 0; ?> 
		<?php while($y < $x): ?>
			<span>*</span>
		<?php $y++; ?> 
		<?php endwhile; ?>
		<?php $x++; ?>
	</p>
	<?php endwhile; ?>
</body>
