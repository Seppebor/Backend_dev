<?php
	$x = 0;
?>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>les 2</title>
</head>
<body>
	<?php while($x < 20): ?>
	<p>
		<?php $y = 1; ?>
		<?php while($y < $x): ?>
			<span>*</span>
			<?php $y++ ?>
		<?php endwhile; ?>
		<?php $x++; ?>
	</p>
	<?php endwhile; ?>
</body>
</html>
