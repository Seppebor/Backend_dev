<?php
$time_to_words = ['01' => 'één', '02' => "twee", '03' => "drie", '04' => "vier", '05' => "vijf", '06' => "zes", '07' => "zeven", '08' => "acht", '09' => "negen", '10' => "tien", '11' => "elf", '12' 
=> "twaalf", '13' => "dertien", '14' => "veertien", '15' => "vijftien", '16' => "zestien", '17' => "zeventien", '18' => "achttien", '19' => "negentien", '20' => "twintig", '21' => "eenentwintig", 
'22' => "tweeëntwintig" , '23' => "drieëntwintig", '24' => "vierentwintig", '25' => "vijfentwintig", '26' => "zessentwontig", '27' => "zevenentwintig", '28' => "achtentwintig", '29' => 
"negenentwintig", '30' => "dertig", '31' => "eenendertig", '32' => "tweeëndertig", '33' => "drieëndertig", '34' =>"vierendertig", '35' => "vijfendertig", '36' => "zessendertig", '37' => 
"zevenendertig", '38' => "achtendertig", '39' => "negenendertig", '40' => "veertig", '41' => "eenenveertig", '42' => "tweeënveertig", '43' => "drieënveertig", '44' => "vierenveertig", '45' => 
"vijfenveertig", '46' => "zessenveertig", '47' => "zevenenveertig", '48' => "achtenveertig", '49' => "negenenveertig", '50' => "vijftig", '51' => "eenenvijftig", '52' => "tweeënvijftig", '53' => 
"drieënvijftig", '54' => "vierenvijftig", '55' => "vijfenvijftig", '56' => "zessenvijftig", '57' => "zevenenvijftig", '58' => "achtenvijftig", '59' => "negenenvijftig", '60' => "zestig" ];

date_default_timezone_set("Europe/Brussels");

$word1;
$word2;

foreach($time_to_words as $value => $word)
{
	if(date('h')==$value)
	{
		$word1 = $word;
	}
	if(date('i')==$value)
	{
		$word2 = $word;
	}
}
$text = "Het is nu $word1 uur en $word2 minuten.";
?>
<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>opdracht 2</title>
</head>

<body>
	<p><?php echo $text; ?></p>
</body>
</html>
