<?php
$cookie_name = "user"; 
$cookie_value = "Seppe Borgmans"; 
setcookie($cookie_name, $cookie_value, time() + 60);
?>
<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Opdracht 11</title>
</head>

<body>
	<?php if(!isset($_COOKIE[$cookie_name])): ?>
	<p>Welkom nieuwe gebruiker</p>
	<?php else: ?>
	<p>Welkom terugkerende gebruiker</p>
	<?php endif ?>
</body>
</html>
